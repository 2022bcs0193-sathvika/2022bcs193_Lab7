pipeline {
    agent any

    environment {
        IMAGE_NAME = "2022bcs0193sathvika/wine_predict_2022bcs0193"
        CONTAINER_NAME = "wine_test_container"
    }

    stages {

        stage('Pull Image') {
            steps {
                bat 'docker pull %IMAGE_NAME%'
            }
        }

        stage('Run Container') {
            steps {
                bat '''
                @echo off
                docker rm -f %CONTAINER_NAME% 2>nul
                docker run -d -p 8000:8000 ^
                --name %CONTAINER_NAME% %IMAGE_NAME%
                '''
            }
        }

        stage('Wait for Service Readiness') {
            steps {
                script {
                    timeout(time: 90, unit: 'SECONDS') {
                        waitUntil {

                            def output = bat(
                                script: '@echo off && curl -s -o nul -w "%%{http_code}" http://localhost:8000/docs',
                                returnStdout: true
                            ).trim()

                            // Extract actual HTTP code
                            def code = output.takeRight(3)

                            echo "Readiness HTTP Code: ${code}"

                            return (code == "200")
                        }
                    }
                }
            }
        }

        stage('Valid Inference Test') {
            steps {
                script {

                    def response = bat(
                        script: '''
                        @echo off
                        curl -s -X POST http://localhost:8000/predict ^
                        -H "Content-Type: application/json" ^
                        -d "{""fixed_acidity"":7.4,""volatile_acidity"":0.7,""citric_acid"":0.0,""residual_sugar"":1.9,""chlorides"":0.076,""free_sulfur_dioxide"":11.0,""total_sulfur_dioxide"":34.0,""density"":0.9978,""pH"":3.51,""sulphates"":0.56,""alcohol"":9.4}"
                        ''',
                        returnStdout: true
                    ).trim()

                    echo "Valid Response: ${response}"

                    if (!(response ==~ /.*\d+.*/)) {
                        error("Prediction is not numeric")
                    }
                }
            }
        }

        stage('Invalid Inference Test') {
            steps {
                script {

                    def output = bat(
                        script: '''
                        @echo off
                        curl -s -o nul -w "%%{http_code}" -X POST http://localhost:8000/predict ^
                        -H "Content-Type: application/json" ^
                        -d "{""fixed_acidity"":7.4}"
                        ''',
                        returnStdout: true
                    ).trim()

                    def code = output.takeRight(3)

                    echo "Invalid Input HTTP Code: ${code}"

                    if (code != "422") {
                        error("Invalid input did not return 422")
                    }
                }
            }
        }

        stage('Stop Container') {
            steps {
                bat '''
                @echo off
                docker stop %CONTAINER_NAME% 2>nul
                docker rm %CONTAINER_NAME% 2>nul
                '''
            }
        }
    }

    post {
        always {
            bat '''
            @echo off
            docker rm -f %CONTAINER_NAME% 2>nul
            '''
        }
    }
}
